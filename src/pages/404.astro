---
import BaseLayout from '../layouts/BaseLayout.astro'
import astropodConfig from '../../.astropod/astropod.config.json'
---

<BaseLayout title="404: Not Found">
  <div class="mt-16 text-center">
    <img
      alt={astropodConfig.name + 'cover'}
      class="mx-auto my-5 h-24 w-24 rounded-lg md:h-40 md:w-40"
      src={astropodConfig.cover}
    />
    <h1 class="mb-2 text-9xl font-bold">404</h1>
    <h3 class="text-2xl">
      Quase encontrastes o link proibido, tente novamente.
    </h3>
    <a class="btn-accent btn mt-9" href="/">Desistir</a>
  </div>
</BaseLayout>
